# No passwords ever.
IdentitiesOnly yes

# This speeds up scp tab completion tremendously.
Controlmaster auto
Controlpath ~/.ssh/ssh-%r@%h:%p.sock

Host heroku.com
IdentityFile ~/.ssh/protected_rsa

Host github.com
HostName github.com
User git
IdentityFile ~/.ssh/Y

Host maikumori
HostName 146.185.148.178
IdentityFile ~/.ssh/protected_rsa
LocalForward 8889 127.0.0.1:8888
LocalForward 10001 127.0.0.1:3000

Host git.maikumori.com
IdentityFile ~/.ssh/gogs.maikumori.com

Host archpc.local
IdentityFile ~/.ssh/protected_rsa

Host archbook.local
IdentityFile ~/.ssh/protected_rsa

Host olv-bastion
    User ec2-user
    Hostname 52.11.101.160
    IdentityFile ~/.ssh/bastion
    LogLevel Quiet

Host *.compute.internal
    User ec2-user
    IdentityFile ~/.ssh/ecs_instance
    ProxyCommand ssh olv-bastion -W %h:%p
    StrictHostKeyChecking no
